@model IEnumerable<EduvisionMvc.Models.Course>
@{
    ViewData["Title"] = "My Courses";
}
<div class="container py-4">
    <div class="mb-4">
        <a asp-controller="InstructorDashboard" asp-action="Index" class="btn btn-outline-secondary btn-sm mb-2">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <h2><i class="bi bi-book text-secondary"></i> My Courses</h2>
    </div>
    @if (!Model.Any())
    {
        <div class="alert alert-info">You are not assigned to any courses yet.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var c in Model)
            {
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-1">@c.Code</h5>
                            <p class="text-muted mb-2">@c.Title</p>
                            <span class="badge bg-primary mb-2">@c.Credits credits</span>
                            <small class="text-muted mb-3">@c.Schedule</small>
                            <div class="mt-auto">
                                <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-outline-secondary btn-sm w-100"><i class="bi bi-eye"></i> View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>