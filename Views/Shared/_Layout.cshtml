@*
  Views/Shared/_Layout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - EduvisionMvc</title>

  <!-- Bootstrap and theme -->
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <!-- SignalR -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js" integrity="sha512-9Qx2b6x9h4bq8oR7VbZV8Xv3mG0e+4y2h8k2v6tKXKqvSy2yqk3t1z8rY7H1dY9dWwqE5vE0QfQ+7s3IQs1CwQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <!-- Botpress loader + embed styles -->
  <script src="https://cdn.botpress.cloud/webchat/v3.3/inject.js"></script>
  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    
    main {
      flex: 1;
    }

    #webchat .bpWebchat {
      position: unset;
      width: 100%;
      height: 100%;
      max-height: 100%;
      max-width: 100%;
    }

    #webchat .bpFab { display: none; }

    .theme-toggle {
      cursor: pointer;
      padding: 0.5rem;
      border-radius: 0.375rem;
      margin-left: 1rem;
      color: var(--text);
    }
    
    .dropdown-menu {
      background: var(--panel);
      border: 1px solid rgba(255,255,255,.08);
      box-shadow: var(--shadow);
    }
    
    .dropdown-item {
      color: var(--text);
    }
    
    .dropdown-item:hover {
      background: var(--panel-2);
      color: white;
    }
    
    .dropdown-divider {
      border-color: rgba(255,255,255,.08);
    }
  </style>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
      <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
          <i class="fas fa-graduation-cap me-2"></i>
          <span class="fw-bold">EDU<span class="text-primary">VISION</span></span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

  <div id="mainNav" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
              <a class="nav-link d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home me-1"></i> Home
              </a>
            </li>
            @if (User.IsInRole("Admin"))
            {
              <li class="nav-item">
                <a class="nav-link d-flex align-items-center" asp-controller="AdminDashboard" asp-action="Index">
                  <i class="fas fa-gauge-high me-1"></i> Admin Dashboard
                </a>
              </li>
            }
            @* Analytics removed per request *@
            @if (User.IsInRole("Admin"))
            {
              @* Keep only Admin Dashboard; remove duplicate Admin menu *@
              
              <!-- Academic Menu - Admin Only -->
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                  <i class="fas fa-university me-1"></i> Academic
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Students" asp-action="Index">
                      <i class="fas fa-user-graduate me-2"></i> Students
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Courses" asp-action="Index">
                      <i class="fas fa-book me-2"></i> Courses
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Enrollments" asp-action="Index">
                      <i class="fas fa-clipboard-list me-2"></i> Enrollments
                    </a>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Departments" asp-action="Index">
                      <i class="fas fa-building me-2"></i> Departments
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Instructors" asp-action="Index">
                      <i class="fas fa-chalkboard-teacher me-2"></i> Instructors
                    </a>
