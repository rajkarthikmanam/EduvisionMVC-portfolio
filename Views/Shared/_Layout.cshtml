@*
  Views/Shared/_Layout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - EduvisionMvc</title>

  <!-- Bootstrap and theme -->
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <!-- SignalR -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <!-- Botpress loader + embed styles -->
  <script src="https://cdn.botpress.cloud/webchat/v3.3/inject.js"></script>
  <style>
    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    
    main {
      flex: 1;
    }

    #webchat .bpWebchat {
      position: unset;
      width: 100%;
      height: 100%;
      max-height: 100%;
      max-width: 100%;
    }

    #webchat .bpFab { display: none; }

    .theme-toggle {
      cursor: pointer;
      padding: 0.5rem;
      border-radius: 0.375rem;
      margin-left: 1rem;
      color: var(--text);
    }
    
    .navbar {
      position: relative;
      z-index: 1050;
    }
    
    .dropdown-menu {
      background: var(--panel);
      border: 1px solid rgba(255,255,255,.08);
      box-shadow: var(--shadow);
      z-index: 1051;
      max-height: 500px;
      overflow-y: auto;
    }
    
    .dropdown:hover .dropdown-menu {
      display: block;
    }
    
    .dropdown-item {
      color: var(--text);
    }
    
    .dropdown-item:hover {
      background: var(--panel-2);
      color: white;
    }
    
    .dropdown-divider {
      border-color: rgba(255,255,255,.08);
    }
  </style>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
      <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
          <i class="fas fa-graduation-cap me-2"></i>
          <span class="fw-bold">EDU<span class="text-primary">VISION</span></span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

  <div id="mainNav" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
          <ul class="navbar-nav flex-grow-1">
            @if (!(User?.Identity?.IsAuthenticated ?? false))
            {
              <li class="nav-item">
                <a class="nav-link d-flex align-items-center" asp-controller="Home" asp-action="Index">
                  <i class="fas fa-home me-1"></i> Home
                </a>
              </li>
            }
            @if ((User?.Identity?.IsAuthenticated ?? false) && User!.IsInRole("Admin"))
            {
              <li class="nav-item">
                <a class="nav-link d-flex align-items-center" asp-controller="AdminDashboard" asp-action="Index">
                  <i class="fas fa-gauge-high me-1"></i> Admin Dashboard
                </a>
              </li>
            }
            @* Analytics removed per request *@
            @if ((User?.Identity?.IsAuthenticated ?? false) && User!.IsInRole("Admin"))
            {
              @* Keep only Admin Dashboard; remove duplicate Admin menu *@
              
              <!-- Academic Menu - Admin Only -->
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                  <i class="fas fa-university me-1"></i> Academic
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Students" asp-action="Index">
                      <i class="fas fa-user-graduate me-2"></i> Students
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Courses" asp-action="Index">
                      <i class="fas fa-book me-2"></i> Courses
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Enrollments" asp-action="Index">
                      <i class="fas fa-clipboard-list me-2"></i> Enrollments
                    </a>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Departments" asp-action="Index">
                      <i class="fas fa-building me-2"></i> Departments
                    </a>
                  </li>
                  <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Instructors" asp-action="Index">
                      <i class="fas fa-chalkboard-teacher me-2"></i> Instructors
                    </a>
                  </li>
                </ul>
              </li>
            }

            <li class="nav-item">
              <a class="nav-link d-flex align-items-center" asp-controller="Pages" asp-action="Api">
                <i class="fas fa-book me-1"></i> Book Finder
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link d-flex align-items-center" asp-controller="Home" asp-action="About">
                <i class="fas fa-info-circle me-1"></i> About
              </a>
            </li>
          </ul>

          <ul class="navbar-nav ms-auto align-items-center">
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                  <i class="fas fa-user-circle me-2"></i> @User.Identity!.Name
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  @if ((User?.Identity?.IsAuthenticated ?? false) && User!.IsInRole("Student"))
                  {
                    <li><a class="dropdown-item" asp-controller="StudentDashboard" asp-action="Index">Student Dashboard</a></li>
                    <li><a class="dropdown-item" asp-controller="StudentCourses" asp-action="Index">Enroll in Courses</a></li>
                  }
                  @if ((User?.Identity?.IsAuthenticated ?? false) && User!.IsInRole("Instructor"))
                  {
                    <li><a class="dropdown-item" asp-controller="InstructorDashboard" asp-action="Index">Instructor Dashboard</a></li>
                  }
                  <li><hr class="dropdown-divider" /></li>
                  <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-1">
                      <button type="submit" class="btn btn-link p-0">Sign out</button>
                    </form>
                  </li>
                </ul>
              </li>
            }
            else
            {
              <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt me-1"></i> Sign in</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="RegisterInstructor"><i class="bi bi-person-video3 me-1"></i> Apply as Instructor</a>
              </li>
            }
          </ul>

          <!-- Theme Toggle -->
          <div class="theme-toggle ms-2" onclick="toggleTheme()">
            <i class="fas fa-moon"></i>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <div class="container-fluid px-0">
    <main role="main" class="pb-3" style="margin-top: 20px;">
      @RenderBody()
    </main>
  </div>

  <footer class="bg-dark text-white mt-auto py-4">
    <div class="container text-center">
      <div class="mb-2">
        <i class="fas fa-graduation-cap me-2"></i>
        <span class="fw-bold">EDUVISION</span>
      </div>
      <p class="mb-0 small">&copy; @DateTime.UtcNow.Year EduVision Learning Management System. All rights reserved.</p>
      <p class="mb-0 small text-muted">Empowering Education Since 2024</p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/assets/js/main.js" asp-append-version="true"></script>

  <!-- Theme Toggle -->
  <script>
    function toggleTheme() {
      const body = document.body;
      const icon = document.querySelector('.theme-toggle i');
      
      body.classList.toggle('dark-mode');
      
      if (body.classList.contains('dark-mode')) {
        icon.classList.remove('fa-moon');
        icon.classList.add('fa-sun');
        localStorage.setItem('theme', 'dark');
      } else {
        icon.classList.remove('fa-sun');
        icon.classList.add('fa-moon');
        localStorage.setItem('theme', 'light');
      }
    }

    // Check for saved theme preference
    document.addEventListener('DOMContentLoaded', () => {
      const savedTheme = localStorage.getItem('theme');
      const icon = document.querySelector('.theme-toggle i');
      
      if (savedTheme === 'dark') {
        document.body.classList.add('dark-mode');
        icon.classList.remove('fa-moon');
        icon.classList.add('fa-sun');
      }
    });
  </script>

  <!-- Botpress init -->
  <script>

    window.botpress.init({
      botId: "1d03a94e-6971-4d3f-bd61-0514cd7dd234",
      clientId: "b25eea09-e897-4538-afa8-6c280ac089f2",
      selector: "#webchat",
      configuration: {
        version: "v2",
        botName: "EduVision Help Assistant",
        botDescription: "",
        color: "#257caf",
        variant: "solid",
        headerVariant: "glass",
        themeMode: "light",
        fontFamily: "inter",
        radius: 2,
        feedbackEnabled: false,
        footer: "[⚡ by Botpress](https://botpress.com/?from=webchat)",
        soundEnabled: false,
        proactiveMessageEnabled: false,
        proactiveBubbleMessage: "Hi! 👋 Need help?",
        proactiveBubbleTriggerType: "afterDelay",
        proactiveBubbleDelayTime: 10
      }
    });
  </script>

  @await RenderSectionAsync("Scripts", required: false)

  <script>
    // SignalR connection for real-time metrics (generic broadcast)
    document.addEventListener('DOMContentLoaded', () => {
      try {
        const connection = new signalR.HubConnectionBuilder()
          .withUrl('/hubs/dashboard')
          .withAutomaticReconnect()
          .build();

        connection.on('metricsUpdated', (payload) => {
          // Dispatch a custom event so dashboards can react without tight coupling
          document.dispatchEvent(new CustomEvent('eduv:metrics', { detail: payload }));
        });

        connection.start().catch(err => console.warn('SignalR start error', err));
      } catch (e) {
        console.warn('SignalR not available', e);
      }
    });
  </script>
</body>
</html>
