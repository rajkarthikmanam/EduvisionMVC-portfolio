                </ul>
              </li>
            }
            else
            {
              <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt me-1"></i> Sign in</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="RegisterInstructor"><i class="bi bi-person-video3 me-1"></i> Apply as Instructor</a>
              </li>
            }
          </ul>

          <!-- Theme Toggle -->
          <div class="theme-toggle ms-2" onclick="toggleTheme()">
            <i class="fas fa-moon"></i>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <div class="container-fluid px-0">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="bg-dark text-white mt-auto py-4">
    <div class="container text-center">
      <div class="mb-2">
        <i class="fas fa-graduation-cap me-2"></i>
        <span class="fw-bold">EDUVISION</span>
      </div>
      <p class="mb-0 small">&copy; @DateTime.UtcNow.Year EduVision Learning Management System. All rights reserved.</p>
      <p class="mb-0 small text-muted">Empowering Education Since 2024</p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/assets/js/main.js" asp-append-version="true"></script>

  <!-- Theme Toggle -->
  <script>
    function toggleTheme() {
      const body = document.body;
      const icon = document.querySelector('.theme-toggle i');
      
      body.classList.toggle('dark-mode');
      
      if (body.classList.contains('dark-mode')) {
        icon.classList.remove('fa-moon');
        icon.classList.add('fa-sun');
        localStorage.setItem('theme', 'dark');
      } else {
        icon.classList.remove('fa-sun');
        icon.classList.add('fa-moon');
        localStorage.setItem('theme', 'light');
      }
    }

    // Check for saved theme preference
    document.addEventListener('DOMContentLoaded', () => {
      const savedTheme = localStorage.getItem('theme');
      const icon = document.querySelector('.theme-toggle i');
      
      if (savedTheme === 'dark') {
        document.body.classList.add('dark-mode');
        icon.classList.remove('fa-moon');
        icon.classList.add('fa-sun');
      }
    });
  </script>

  <!-- Botpress init -->
  <script>

    window.botpress.init({
      botId: "1d03a94e-6971-4d3f-bd61-0514cd7dd234",
      clientId: "b25eea09-e897-4538-afa8-6c280ac089f2",
      selector: "#webchat",
      configuration: {
        version: "v2",
        botName: "EduVision Help Assistant",
        botDescription: "",
        color: "#257caf",
        variant: "solid",
        headerVariant: "glass",
        themeMode: "light",
        fontFamily: "inter",
        radius: 2,
        feedbackEnabled: false,
        footer: "[⚡ by Botpress](https://botpress.com/?from=webchat)",
        soundEnabled: false,
        proactiveMessageEnabled: false,
        proactiveBubbleMessage: "Hi! 👋 Need help?",
        proactiveBubbleTriggerType: "afterDelay",
        proactiveBubbleDelayTime: 10
      }
    });
  </script>

  @await RenderSectionAsync("Scripts", required: false)

  <script>
    // SignalR connection for real-time metrics (generic broadcast)
    document.addEventListener('DOMContentLoaded', () => {
      try {
        const connection = new signalR.HubConnectionBuilder()
          .withUrl('/hubs/dashboard')
          .withAutomaticReconnect()
          .build();

        connection.on('metricsUpdated', (payload) => {
          // Dispatch a custom event so dashboards can react without tight coupling
          document.dispatchEvent(new CustomEvent('eduv:metrics', { detail: payload }));
        });

        connection.start().catch(err => console.warn('SignalR start error', err));
      } catch (e) {
        console.warn('SignalR not available', e);
      }
    });
  </script>
</body>
</html>
