@model InstructorDashboardViewModel
@{
    ViewData["Title"] = "Instructor Dashboard";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">Instructor Dashboard</h2>
            <p class="text-muted mb-0">Welcome back, @Model.Name</p>
        </div>
        <div class="text-muted">
            <i class="fas fa-university"></i> @Model.Department
        </div>
    </div>

    <!-- Overview Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Active Courses (Current Term)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CurrentCourses.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-book fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Active Students (Current Term)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActiveStudents</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-graduate fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Enrollment Requests Pending</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingApprovalsCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-hourglass-half fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Past Courses</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PastCourses.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-history fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Approvals Section -->
    @if (Model.PendingApprovals.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0"><i class="fas fa-clock"></i> Pending Enrollment Approvals</h5>
                        <span class="badge bg-light text-dark">@Model.PendingApprovals.Count requests</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Student</th>
                                        <th>Course</th>
                                        <th>Term</th>
                                        <th>Requested On</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pending in Model.PendingApprovals)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@pending.StudentName</strong>
                                            </td>
                                            <td>
                                                <strong>@pending.CourseCode</strong><br />
                                                <small class="text-muted">@pending.CourseTitle</small>
                                            </td>
                                            <td>@pending.Term</td>
                                            <td>@pending.EnrollDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <form asp-action="ApproveEnrollment" method="post" style="display: inline;">
                                                    <input type="hidden" name="id" value="@pending.EnrollmentId" />
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        <i class="fas fa-check"></i> Approve
                                                    </button>
                                                </form>
                                                <form asp-action="DeclineEnrollment" method="post" style="display: inline;">
                                                    <input type="hidden" name="id" value="@pending.EnrollmentId" />
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to decline this enrollment?');">
                                                        <i class="fas fa-times"></i> Decline
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Current Courses Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0"><i class="fas fa-book-open"></i> Current Courses</h5>
                </div>
                <div class="card-body">
                    @if (Model.CurrentCourses.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Title</th>
                                        <th>Schedule</th>
                                        <th>Students</th>
                                        <th>Avg. Grade</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model.CurrentCourses)
                                    {
                                        <tr>
                                            <td><strong>@course.Code</strong></td>
                                            <td>@course.Title</td>
                                            <td>@course.Schedule</td>
                                            <td>
                                                <span class="badge bg-info">@course.EnrollmentCount / @course.Capacity</span>
                                            </td>
                                            <td>
                                                @if (course.AverageGrade > 0)
                                                {
                                                    <span class="badge @(course.AverageGrade >= 3.0m ? "bg-success" : course.AverageGrade >= 2.0m ? "bg-warning" : "bg-danger")">
                                                        @course.AverageGrade.ToString("F2")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No current courses assigned.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Past Courses Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-history"></i> Past Courses</h5>
                </div>
                <div class="card-body">
                    @if (Model.PastCourses.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Title</th>
                                        <th>Term</th>
                                        <th>Students</th>
                                        <th>Avg. Grade</th>
                                        <th>Pass Rate</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model.PastCourses)
                                    {
                                        <tr>
                                            <td><strong>@course.Code</strong></td>
                                            <td>@course.Title</td>
                                            <td>@course.Term</td>
                                            <td>@course.TotalStudents</td>
                                            <td>
                                                <span class="badge @(course.AverageGrade >= 3.0m ? "bg-success" : course.AverageGrade >= 2.0m ? "bg-warning" : "bg-danger")">
                                                    @course.AverageGrade.ToString("F2")
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @(course.PassRate >= 70 ? "bg-success" : course.PassRate >= 50 ? "bg-warning" : "bg-danger")">
                                                    @course.PassRate.ToString("F0")%
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No past courses with graded students yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
