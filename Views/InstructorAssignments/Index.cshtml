@model IEnumerable<EduvisionMvc.Models.Assignment>
@{
    ViewData["Title"] = "My Assignments";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a asp-controller="InstructorDashboard" asp-action="Index" class="btn btn-outline-secondary btn-sm mb-2">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
            <h2><i class="bi bi-clipboard-check text-success"></i> My Assignments</h2>
        </div>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> New Assignment</a>
    </div>
    @if (!Model.Any())
    {
        <div class="alert alert-info"><i class="bi bi-info-circle"></i> No assignments yet.</div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Course</th>
                                <th>Due Date</th>
                                <th>Max Points</th>
                                <th>Published</th>
                                <th>Submissions</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var a in Model)
                            {
                                <tr>
                                    <td><strong>@a.Title</strong><br /><small class="text-muted">@a.Description</small></td>
                                    <td>@a.Course?.Code</td>
                                    <td>@(a.DueDate?.ToString("MMM dd, yyyy") ?? "â€”")</td>
                                    <td>@a.MaxPoints</td>
                                    <td>@(a.IsPublished ? "Yes" : "No")</td>
                                    <td>@a.Submissions.Count</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                            <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>