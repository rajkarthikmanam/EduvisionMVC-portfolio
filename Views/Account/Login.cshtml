@{
    ViewData["Title"] = "Login";
}

<style>
    .login-input {
        background-color: #f8f9fa !important;
        border: 1px solid #dee2e6;
    }
    
    .login-input:focus {
        background-color: #ffffff !important;
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-box-arrow-in-right"></i> Sign In</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Login" asp-antiforgery="true">
                        @* Anti-forgery token required because action has [ValidateAntiForgeryToken]; was missing causing silent 400 + staying on login page *@
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control login-input" id="email" name="email" required />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control login-input" id="password" name="password" required />
                        </div>
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-check-circle-fill"></i> Sign In
                            </button>
                        </div>
                    </form>
                    
                    <hr class="my-4" />
                    
                    <div class="alert alert-info">
                        <strong>Test Accounts:</strong><br />
                        <small>
                            Admin: admin@local.test / Admin123!<br />
                            Instructor: instructor@local.test / Instructor123!<br />
                            Student: student@local.test / Student123!
                        </small>
                    </div>
                    
                    <p class="text-center mb-0">
                        Don't have an account? 
                        <a asp-action="Register" class="text-decoration-none fw-bold">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}