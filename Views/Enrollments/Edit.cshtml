@model EduvisionMvc.Models.Enrollment

@{
    ViewData["Title"] = "Edit Enrollment";
}

<h1>Edit Enrollment</h1>

<h4>Update enrollment details</h4>
<hr />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="StudentId" class="control-label fw-bold">Student</label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CourseId" class="control-label fw-bold">Course</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Term" class="control-label fw-bold">Term</label>
                <select asp-for="Term" class="form-control">
                    <option value="Spring 2025">Spring 2025 (Past)</option>
                    <option value="Summer 2025">Summer 2025 (Past)</option>
                    <option value="Fall 2025">Fall 2025 (Active)</option>
                </select>
                <span asp-validation-for="Term" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NumericGrade" class="control-label fw-bold">Grade (0.0 - 4.0)</label>
                <input asp-for="NumericGrade" class="form-control" type="number" step="0.01" min="0" max="4" placeholder="Leave empty for in-progress courses" />
                <span asp-validation-for="NumericGrade" class="text-danger"></span>
                <small class="form-text text-muted">
                    <strong>Leave empty</strong> for active/in-progress courses. Enter 0.0-4.0 for completed courses only.
                </small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label fw-bold">Enrollment Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="0">Pending</option>
                    <option value="1">Approved</option>
                    <option value="4">Completed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
                <small class="form-text text-muted">
                    <strong>Pending/Approved:</strong> Active courses (Fall 2025). 
                    <strong>Completed:</strong> Finished courses with grades (Spring/Summer 2025).
                </small>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
