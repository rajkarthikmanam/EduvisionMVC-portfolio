@model IEnumerable<EduvisionMvc.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1>Enrollments</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Enrollment</a>
</p>


<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Student</th>
            <th>Course</th>
            <th>Instructors</th>
            <th>Term</th>
            <th>Status</th>
            <th>Numeric Grade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var e in Model)
{
    var instructors = (e.Course?.CourseInstructors ?? new List<EduvisionMvc.Models.CourseInstructor>())
                      .Select(ci => ci.Instructor != null
                          ? $"{ci.Instructor.FirstName} {ci.Instructor.LastName}".Trim()
                          : "")
                      .Where(s => !string.IsNullOrWhiteSpace(s));
    
    // Determine if course has ended
    var courseEnded = e.Course?.EndDate != null && e.Course.EndDate < DateTime.UtcNow;
    var statusBadge = e.Status switch
    {
        EduvisionMvc.Models.EnrollmentStatus.Pending => "badge bg-warning text-dark",
        EduvisionMvc.Models.EnrollmentStatus.Approved => "badge bg-primary",
        EduvisionMvc.Models.EnrollmentStatus.Completed => "badge bg-success",
        EduvisionMvc.Models.EnrollmentStatus.Dropped => "badge bg-secondary",
        EduvisionMvc.Models.EnrollmentStatus.Rejected => "badge bg-danger",
        _ => "badge bg-secondary"
    };
    var statusText = e.Status.ToString();
    
    <tr>
        <td>@e.Student?.Name</td>
        <td>@e.Course?.Title</td>
        <td>@string.Join(", ", instructors)</td>
        <td>@e.Term</td>
        <td><span class="@statusBadge">@statusText</span></td>
    <td>@e.NumericGrade</td>
        <td>
            <a asp-action="Edit" asp-route-id="@e.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@e.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@e.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
