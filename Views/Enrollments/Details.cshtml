@model EduvisionMvc.Models.Enrollment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Student</dt>
        <dd class = "col-sm-10">
            @(Model.Student != null ? Model.Student.Name : "-")
        </dd>
        <dt class = "col-sm-2">Course</dt>
        <dd class = "col-sm-10">
            @(Model.Course != null ? ($"{Model.Course.Code} - {Model.Course.Title}") : "-")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Term)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Term)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumericGrade)
        </dt>
        <dd class = "col-sm-10">
            @(Model.NumericGrade.HasValue ? Model.NumericGrade.Value.ToString("F2") : "-")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
