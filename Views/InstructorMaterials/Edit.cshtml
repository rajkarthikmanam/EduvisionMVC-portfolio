@model EduvisionMvc.Models.CourseMaterial
@{
    ViewData["Title"] = "Edit Material";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Material</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label">Course</label>
                            <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Courses"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Url" class="form-label">URL/Link</label>
                            <input asp-for="Url" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Material Type</label>
                            <select asp-for="Type" class="form-select">
                                <option value="0">Document</option>
                                <option value="1">Video</option>
                                <option value="2">Link</option>
                                <option value="3">Presentation</option>
                                <option value="4">Code</option>
                                <option value="5">Other</option>
                            </select>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsPublished" class="form-check-input" />
                            <label asp-for="IsPublished" class="form-check-label">Published</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }