@model EduvisionMvc.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class = "col-sm-10">@(Model.Description ?? "-")</dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Credits)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Credits)
        </dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Capacity)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Capacity)</dd>
        <dt class = "col-sm-2">Requires Approval</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.RequiresApproval)</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Level)</dt>
        <dd class = "col-sm-10">@(Model.Level ?? "-")</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.DeliveryMode)</dt>
        <dd class = "col-sm-10">@(Model.DeliveryMode ?? "-")</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Prerequisites)</dt>
        <dd class = "col-sm-10">@(Model.Prerequisites ?? "-")</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Schedule)</dt>
        <dd class = "col-sm-10">@(Model.Schedule ?? "-")</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Location)</dt>
        <dd class = "col-sm-10">@(Model.Location ?? "-")</dd>
        <dt class = "col-sm-2">Department</dt>
        <dd class = "col-sm-10">
            @(Model.Department != null ? Model.Department.Name : "-")
        </dd>
        <dt class = "col-sm-2">Instructor</dt>
        <dd class = "col-sm-10">
            @if (Model.CourseInstructors != null && Model.CourseInstructors.Any())
            {
                @string.Join(", ", Model.CourseInstructors.Select(ci => ci.Instructor != null ? $"Dr. {ci.Instructor.LastName}" : ""))
            }
            else
            {
                <text>-</text>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
